<GridLayout loaded="onLoad" columns="50, *, 50" rows="*" width="100%" height="50" class="header-bar">
    <Button text="&#xe969;" class="fi header-btn back-btn" row="0" col="0" />
    <StackLayout width="100%" row="0" col="1" orientation="vertical">
        <Label id="titleItem" horizontalAlignment="stretch" height="100%" class="header-title" text="{{ title }}"/>
    </StackLayout>
    <Button text="&#xe9be;" class="fi header-btn new-btn" row="0" col="2"/>
</GridLayout>