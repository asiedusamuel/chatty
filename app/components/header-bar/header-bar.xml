<GridLayout loaded="onLoad" columns="auto, *, auto" rows="*" width="100%" height="50" class="header-bar">
    <Button text="&#xe969;" visibility="{{ disableBackButton ? 'collapsed' : 'visible' }}" tap="{{_BackAction}}" id="back-btn" class="fi header-btn left-btns back-btn dark" row="0" col="0" />
    <StackLayout width="100%" row="0" col="1" orientation="vertical">
        <Label id="titleItem" horizontalAlignment="stretch" height="100%" class="header-title dark " text="{{ title }}"/>
    </StackLayout>
    <StackLayout id="right-btns" orientation="horizontal" row="0" col="2"></StackLayout>
</GridLayout>