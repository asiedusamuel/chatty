<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:nativescript-image="nativescript-image" xmlns:ui="components/profile-image" xmlns:uii="components/fullscreen-loader" actionBarHidden="true" navigatingTo="navigatingTo" class="page login">
	<StackLayout orientation="vertical" style="height:100%;">
		<StackLayout id="login-panel">
			<nativescript-image:Img width="100" height="100" id="profile-image" src="https://sjc3.discourse-cdn.com/business5/user_avatar/discourse.nativescript.org/manojdcoder/45/1407_2.png" class="profile-image large" roundAsCircle="true" style="border-width:5; margin-top: 29%; margin-bottom: 5%;" />
			<!-- <ui:profile-image initials="SA" size="100" src="" borderSize="5" /> -->
			<StackLayout orientation="vertical" class="container">
				<Label text="Password" class="label" />
				<AbsoluteLayout>
					<TextField hint="Enter your password" secure="true" returnKeyType="done" autocorrect="false" class="rounded-input">
					</TextField>
				</AbsoluteLayout>
				<Button text="Login" onTap="{{ checkLogin }}" class="rounded-btn login-btn" />
			</StackLayout> 
			<StackLayout orientation="horizontal" horizontalAlignment="center" style="margin-top: 40;" class="container">
				<Label text="Don't remember password?" />
				<Label text="Reset Now" class="text-link" onTap="{{ navigation.navigateToRememberPass }}" />
			</StackLayout>
		</StackLayout>
		<uii:fullscreen-loader id="loader-panel" visibility="collapsed" />
	</StackLayout>
</Page>
